{
  "name": "commerceplate",
  "version": "3.0.1",
  "description": "Shopify Storefront Boilerplate with Next.js, Tailwind CSS, and Shopify SDK",
  "author": "zeon.studio",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "concurrently \"node scripts/themeGenerator.mjs --watch\" \"next dev\"",
    "build": "node scripts/themeGenerator.mjs && next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier -w ./src",
    "remove-darkmode": "node scripts/removeDarkmode.mjs && yarn format"
  },
  "engines": {
    "node": ">=22.20.0"
  },
  "dependencies": {
    "@justinribeiro/lite-youtube": "^1.9.0",
    "@next/third-parties": "^16.1.3",
    "date-fns": "^4.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "js-cookie": "^3.0.5",
    "marked": "^17.0.1",
    "next": "16.1.3",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-gravatar": "^2.6.3",
    "react-icons": "^5.5.0",
    "remark-gfm": "^4.0.1",
    "swiper": "^12.0.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^25.0.9",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@types/react-gravatar": "^2.6.14",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwind-bootstrap-grid": "^6.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "5.9.3"
  }
}
